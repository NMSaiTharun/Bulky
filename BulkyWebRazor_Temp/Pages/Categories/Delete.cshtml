@page
@model BulkyBookWebRazor_Temp.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input asp-for="@Model.Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="@Model.Category.Name" class="p-0"></label>
            <input asp-for="@Model.Category.Name" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="@Model.Category.DisplayOrder" class="p-0"></label>
            <input asp-for="@Model.Category.DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index"class=" btn btn-outline-secondary form-control"> Back To Category List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}